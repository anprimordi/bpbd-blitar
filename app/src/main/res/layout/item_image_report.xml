<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>


    </data>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

        <ImageView
            android:id="@+id/image_report"
            android:layout_width="108dp"
            android:layout_height="108dp"
            android:background="@drawable/shape_rounded_rect_8"
            android:backgroundTint="?attr/colorFormBackground"
            android:contentDescription="@null"
            android:scaleType="centerInside"
            android:src="@drawable/img_bpbd_40" />

        <ImageView
            android:id="@+id/image_action_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_margin="4dp"
            android:background="@drawable/shape_oval"
            android:backgroundTint="?attr/colorError"
            android:contentDescription="@null"
            android:padding="2dp"
            android:src="@drawable/ic_baseline_clear_16"
            app:tint="?attr/colorOnError" />
    </FrameLayout>
</layout>